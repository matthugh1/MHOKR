{
  "name": "okr-nexus",
  "version": "1.0.0",
  "private": true,
  "description": "AI-first OKR platform with visual builder and intelligent assistance",
  "scripts": {
    "dev": "concurrently \"npm run dev:gateway\" \"npm run dev:core-api\" \"npm run dev:ai-service\" \"npm run dev:integration-service\" \"npm run dev:web\"",
    "dev:gateway": "cd services/api-gateway && npm run dev",
    "dev:core-api": "cd services/core-api && npm run dev",
    "dev:ai-service": "cd services/ai-service && npm run dev",
    "dev:integration-service": "cd services/integration-service && npm run dev",
    "dev:web": "cd apps/web && npm run dev",
    "build": "npm run build:services && npm run build:web",
    "build:services": "npm run build:gateway && npm run build:core-api && npm run build:ai-service && npm run build:integration-service",
    "build:gateway": "cd services/api-gateway && npm run build",
    "build:core-api": "cd services/core-api && npm run build",
    "build:ai-service": "cd services/ai-service && npm run build",
    "build:integration-service": "cd services/integration-service && npm run build",
    "build:web": "cd apps/web && npm run build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:migrate": "cd services/core-api && npx prisma migrate dev",
    "db:studio": "cd services/core-api && npx prisma studio",
    "db:seed": "cd services/core-api && npx prisma db seed",
    "db:reset": "cd services/core-api && npx prisma migrate reset",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "lint": "eslint \"**/*.{ts,tsx,js,jsx}\" --fix",
    "typecheck": "tsc --noEmit",
    "premerge:audit": "node scripts/pre-merge-audit.js"
  },
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}


